<div class="border-form-div">
  <h2>Sign up</h2>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.text_field :email, autofocus: true, placeholder: 'Email address' %>
    <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>
    <%= f.text_field :last_name, autofocus: true, placeholder: 'last Name' %>
    <%= f.password_field :password, placeholder: 'Password' %>
    <%= f.password_field :password_confirmation, placeholder: 'Password confirmation' %>
    <%= f.submit "Sign up", class: 'btn btn-primary btn-sm' %>
  <% end %>
  <%= render "users/shared/links" %>
</div>